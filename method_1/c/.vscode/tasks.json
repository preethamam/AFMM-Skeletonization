{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-g",
                "-I${workspaceFolder}",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/skeletongrad.c",
                "-o",
                "${workspaceFolder}/skelgrad.exe",
                "-lm",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}"  // Changed from fileDirname to workspaceFolder
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run skelgrad",
            "type": "shell",
            "command": "${workspaceFolder}/skelgrad.exe",  // Full path to executable
            "args": [
                "${workspaceFolder}/mushroom.png",     // Full path to input
                "${workspaceFolder}/output.png",       // Full path to output
                "25.0"
            ],
            "options": {
                "cwd": "${workspaceFolder}"  // Ensure working directory is set
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "C/C++: gcc.exe build active file",
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "C/C++: gcc.exe build active file",
                "run skelgrad"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}